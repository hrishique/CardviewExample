<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F7E732"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       app:cardCornerRadius="20dp"
       android:layout_margin="20dp"
       android:outlineSpotShadowColor="#616C6F"
       android:animateLayoutChanges="true"
        app:cardBackgroundColor="#1B96DA"
       android:background="#616C6F"
       android:layout_height="wrap_content">

    <ImageView
        android:background="#1B96DA"
        android:layout_margin="10dp"
        android:src="@drawable/flip2"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

   </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/mail"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        android:background="@drawable/flipkart"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        android:layout_margin="10dp"
        android:hint="  Enter Email id"
        android:textColor="#F6E631"
        android:textColorHint="#F6E631"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <EditText
        android:id="@+id/pass"
        android:background="@drawable/flipkart"
        android:drawableLeft="@drawable/lock"
        android:inputType="textPassword"
        android:padding="20dp"
        android:layout_marginTop="15dp"
        android:layout_margin="10dp"
        android:hint="  Enter Password"
        android:textColor="#F6E631"
        android:textColorHint="#F6E631"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="80dp" />
    <TextView
        android:layout_marginTop="1dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="right"
        android:text="Forgot Password?"
    android:textColor="#2C3335"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <Button
        android:id="@+id/submit"
        android:background="@drawable/flipkart"
        android:layout_gravity="center"
        android:elevation="@dimen/cardview_compat_inset_shadow"

        android:text="Submit"
        android:textSize="25dp"
        android:textColor="#F6E631"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#2C3335"
        android:textSize="20dp"
        android:gravity="left"
        android:text="New to Flipkart ?Sign Up!"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <RatingBar
        android:id="@+id/rate"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:rating="2.5"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />

</LinearLayout>